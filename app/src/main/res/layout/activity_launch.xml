<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck"
    tools:context=".LaunchActivity">

    <LinearLayout
        android:id="@+id/LayOut1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/GameEasy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gameEasyText"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <Button
            android:id="@+id/GameNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gameNormalText" />

        <Button
            android:id="@+id/GameHard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gameHardText" />

        <Button
            android:id="@+id/GameCombat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联网对战" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayOut2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/LayOut1"
        android:layout_centerVertical="true"
        android:layout_marginTop="-65dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/SoundCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soundText"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayOut3"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_below="@id/LayOut2"
        android:layout_centerVertical="true"
        android:layout_marginTop="-72dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/changeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改用户昵称" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/LayOut3"
        android:gravity="right"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom|right"
            android:background="@color/white"
            android:src="@drawable/shopping"
            android:text="@string/shoppingText"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>


</RelativeLayout>