<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_shopping"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="179dp"
        android:layout_height="111dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_shopping">

        <TextView
            android:id="@+id/prop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:text="价格："
            android:textColor="#FF8F03"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/prop_price"
            android:text="1000"
            android:textColor="#FF8F03"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冰冻道具"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prop_price"
            android:layout_marginTop="10dp"
            android:text="当前拥有数量："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/prop_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prop_price"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/text_view"
            android:text="1"
            android:textColor="#E91E63"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>